<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackOnBuild>true</PackOnBuild>
    <PackageId>Xamarin.Theme</PackageId>
    <PackageVersion>0.1.3</PackageVersion>
    <Authors>AnthoOnf</Authors>
    <Description>An easy way to implement style cross platform.</Description>
    <Owners>Anthony Onfray</Owners>
    <PackageProjectUrl>https://github.com/AnthoOnf/Xamarin.Theme</PackageProjectUrl>
    <Title>Xamarin.Theme</Title>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Class1.cs" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Sources\" />
    <Folder Include="Sources\Base\" />
    <Folder Include="Sources\Base\Interfaces\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="NuGet.Build.Packaging" Version="0.2.0" />
  </ItemGroup>
  <ProjectExtensions>
    <MonoDevelop>
      <Properties>
        <Policies>
          <DotNetNamingPolicy DirectoryNamespaceAssociation="None" ResourceNamePolicy="FileName" />
        </Policies>
      </Properties>
    </MonoDevelop>
  </ProjectExtensions>
</Project>
